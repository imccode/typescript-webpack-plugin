{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "removeComments": true,
    "declaration": true,
    "declarationDir": "./types",
    "rootDir": "./src",
    "baseUrl": ".",
    "outDir": "./lib",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true
  },
  "paths": {
    "src/*": ["./src/*"]
  },
  "exclude": ["node_modules", "test"]
}